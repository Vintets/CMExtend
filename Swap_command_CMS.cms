#define AI_GET_PIDCM:0xC40F
SUB(CME_GET_PIDCM) //===  получить PID Clickermann-а  ==========================
    INIWRITE($main_ini, "completion", "0", "clickermann")
    WAITMS(20)
    PostMessage($hwnd_CME, AI_GET_PIDCM, 0, 0)
    wait_completion()
    $pid_CM = INT(INIREAD($main_ini, "CMPID", "clickermann"))
    IF($log > 1)
        LOGWRITE("Clickermann pid: ", $pid_CM)
        //HINTPOPUP(STRCONCAT("Clickermann hwnd: ", $pid_CM), "Мой GUI")
    END_IF
END_SUB

#define AI_SETREGION:0xC450
SUB(CME_SETREGION, $x1, $y1, $x2, $y2) //===  SETREGION  =======================
